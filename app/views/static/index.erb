</center>

<table style= "width:90%" border="1" cellpadding="10" align="center">
	<tr>
		<td>ID</td>
		<td>LONG</td>
		<td>SHORT</td>
		<td>CREATE AT</td>
	</tr>
<% @urls.each do |url| %>
	<tr> 
		<td> <%= url.id %> </td> 
		<td> <%= url.long_url %> </td> 
		<td> <a href="http://localhost:9393/<%= url.short_url %>">http://localhost:9393/<%= url.short_url %> </a> </td>
			<td> <%= url.updated_at %> </td>  

	</tr> <br>
<% end %>


